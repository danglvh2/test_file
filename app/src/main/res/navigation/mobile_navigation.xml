<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_image">

    <fragment
        android:id="@+id/navigation_image"
        android:name="com.example.myapplication.ui.image.ImageFragment"
        android:label="@string/title_image"
        tools:layout="@layout/fragment_image" />

    <fragment
        android:id="@+id/navigation_audio"
        android:name="com.example.myapplication.ui.audio.AudioFragment"
        android:label="@string/title_audio"
        tools:layout="@layout/fragment_audio" />

    <fragment
        android:id="@+id/navigation_file"
        android:name="com.example.myapplication.ui.file.FileFragment"
        android:label="@string/title_file"
        tools:layout="@layout/fragment_file" />
</navigation>